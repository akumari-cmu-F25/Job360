# Required
OPENAI_API_KEY=your-openai-api-key-here

# Job Search (JSearch via RapidAPI - https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch)
RAPIDAPI_KEY=your-rapidapi-key-here

# LinkedIn Employee List (Proxycurl - https://nubela.co/proxycurl)
# Optional: when not set, the employee section is hidden in the LinkedIn Referral modal
PROXYCURL_API_KEY=your-proxycurl-key-here

# Model Settings (optional)
AGENT_MODEL=gpt-4o
STT_MODEL=whisper-1
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2000

# Guardrails (optional)
ENABLE_GUARDRAILS=true
MAX_INPUT_LENGTH=5000
MAX_OUTPUT_LENGTH=10000
ENABLE_MODERATION=true

# Evaluation (optional)
ENABLE_EVALUATION=true
EVALUATION_MODEL=gpt-4o
AUTO_EVALUATE=false
